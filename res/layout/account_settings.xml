<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >
    
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#52bbdb" >
        
        <ImageView
	        android:id="@+id/back"
	        android:layout_width="45dp"
	        android:layout_height="40dp"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:paddingBottom="5dp"
	        android:paddingTop="5dp"
	        android:src="@drawable/back"
	        android:contentDescription="@string/image_desc"
	        android:layout_centerVertical="true" />
        
        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textColor="#ffffff"
            android:textSize="34sp" />
        
        <ImageView
            android:id="@+id/option"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/option_icon"
            android:contentDescription="@string/image_desc"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/row1"
        android:layout_below="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:minHeight="50dp" >
        
        <TextView
            android:id="@+id/title1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        
        <EditText
            android:id="@+id/name"
            android:layout_toRightOf="@id/title1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Steve Young"
            android:textSize="12sp"
            android:textColor="#605f5f"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:inputType="textNoSuggestions|textMultiLine"
            android:textCursorDrawable="@drawable/cursor_drawable" />
        
        <ImageView
            android:id="@+id/ic_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pen_icon"
            android:contentDescription="@string/image_desc"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        
    </RelativeLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@id/row1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc" />
    
    <RelativeLayout
        android:id="@+id/row2"
        android:layout_below="@id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:minHeight="50dp" >
        
        <TextView
            android:id="@+id/title2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        
        <EditText
            android:id="@+id/mail"
            android:layout_toRightOf="@id/title2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#605f5f"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:inputType="textNoSuggestions|textMultiLine" />
        
        <!-- <ImageView
            android:id="@+id/ic_email"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pen_icon"
            android:contentDescription="@string/image_desc"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" /> -->
        
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@id/row2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc" />
    
    <RelativeLayout
        android:id="@+id/row3"
        android:layout_below="@id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:minHeight="50dp" >
        
        <TextView
            android:id="@+id/title3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        
        <EditText
            android:id="@+id/pword"
            android:layout_toRightOf="@id/title3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="******"
            android:textSize="12sp"
            android:textColor="#605f5f"
            android:textColorHint="#605f5f"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_drawable" />
        
        <ImageView
            android:id="@+id/ic_pword"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pen_icon"
            android:contentDescription="@string/image_desc"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        
    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@id/row3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc" />
    
    <RelativeLayout
        android:id="@+id/row4"
        android:layout_below="@id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:minHeight="50dp"
        android:visibility="gone" >
        
        <TextView
            android:id="@+id/title4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Re-password"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        
        <EditText
            android:id="@+id/repword"
            android:layout_toRightOf="@id/title4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="#605f5f"
            android:textColorHint="#605f5f"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_drawable" />
        
    </RelativeLayout>
    <View
        android:id="@+id/line4"
        android:layout_below="@id/row4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc"
        android:visibility="gone" />
    
    <RelativeLayout
        android:id="@+id/row5"
        android:layout_below="@id/row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:minHeight="50dp" >
        
        <TextView
            android:id="@+id/title5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Promo Code"
            android:textColor="#101010"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        
        <EditText
            android:id="@+id/pc"
            android:layout_toRightOf="@id/title5"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="dra4me"
            android:textSize="12sp"
            android:textColor="#605f5f"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:focusable="false"
            android:background="@android:color/transparent"
            android:inputType="textNoSuggestions" />
        
        <ImageView
            android:id="@+id/ic_pc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/promocode_icon"
            android:contentDescription="@string/image_desc"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
        
    </RelativeLayout>
    <View
        android:id="@+id/line5"
        android:layout_below="@id/row5"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#bcbcbc" />
    <Button
        android:id="@+id/done"
        android:layout_below="@id/line5"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="DONE"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/my_btn_blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>

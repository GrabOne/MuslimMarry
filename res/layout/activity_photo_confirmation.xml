<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#40adcc" >
    
    <ImageView
        android:id="@+id/back"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/back"
        android:contentDescription="@string/image_desc" />
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOOKING GOOD!"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />
    
    <ImageView
        android:id="@+id/photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/avatar"
        android:contentDescription="@string/image_desc"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop" />
    
    <Button
        android:id="@+id/btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/my_btn_white"
        android:text="REGISTER"
        android:textColor="#48b5d4"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal" />
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="230dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="By registering you are accepting our  terms and conditions"
        android:layout_marginTop="5dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STEP 3/3"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />
    

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/photo_customize"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_desc" />
    
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#52bbdb" >
        
        <ImageView
	        android:id="@+id/back"
	        android:layout_width="55dp"
	        android:layout_height="50dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:paddingBottom="10dp"
	        android:paddingTop="10dp"
	        android:src="@drawable/back"
	        android:contentDescription="@string/image_desc" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >
            
            <TextView
	            android:id="@+id/title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="CUSTOMIZE"
	            android:textColor="#ffffff"
	            android:textSize="34sp"
	            android:layout_gravity="center_horizontal" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(OPTIONAL)"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-20dp" />
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
        
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#80e3e3e3" >
            
            <Button
                android:layout_width="13dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_left"
                android:layout_marginLeft="20dp" />
            
            <com.devsmart.android.ui.HorizontalListView
	            android:id="@+id/mList"
	            android:layout_width="290dp"
	            android:layout_height="40dp"
	            android:layout_centerHorizontal="true"
	            android:scrollbars="none"
	             >
			</com.devsmart.android.ui.HorizontalListView>
			
            <Button
                android:layout_width="13dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right_2"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_below="@id/rl1"
	        android:layout_width="fill_parent"
	        android:layout_height="70dp"
	        android:background="#8048b5d4" >
	        
	        <Button
	            android:id="@+id/btn"
	            android:layout_width="250dp"
	            android:layout_height="50dp"
	            android:text="USE THIS PHOTO"
	            android:textColor="#48b5d4"
	            android:textSize="34dp"
	            android:gravity="center"
	            android:background="@drawable/my_btn_white"
	            android:layout_centerInParent="true" />
	        
	    </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>

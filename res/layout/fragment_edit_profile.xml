<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >
    
    <ImageView
        android:id="@+id/wallpaper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_desc" />
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#F2FFFFFF" >
		    
		    <RelativeLayout
		        android:id="@+id/box_avt"
		        android:layout_width="fill_parent"
		        android:layout_height="142dp"
		        android:layout_marginTop="15dp" >
		        
		        <ImageView
			        android:id="@+id/photo"
			        android:layout_width="142dp"
			        android:layout_height="142dp"
			        android:contentDescription="@string/image_desc"
			        android:layout_centerHorizontal="true"
			        android:scaleType="centerCrop" />
		        
		        <RelativeLayout
		            android:layout_width="142dp"
		            android:layout_height="15dp"
		            android:background="@drawable/info_bg"
		            android:layout_alignParentBottom="true"
		            android:layout_centerHorizontal="true" >
		            
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="tap image to edit"
		                android:textColor="#c3bebe"
		                android:textSize="10sp"
		                android:layout_centerInParent="true" />
		            
		        </RelativeLayout>
		        
		    </RelativeLayout>
		    
	        <TextView
	            android:id="@+id/tvshare"
	            android:layout_below="@id/box_avt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="share photo"
	            android:textColor="#52bbdb"
	            android:textSize="12sp"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp" />
	        
	        <View
	            android:id="@+id/line1"
	            android:layout_below="@id/tvshare"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        <RelativeLayout
	            android:id="@+id/name_group"
	            android:layout_below="@id/line1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="15dp"
	            android:paddingRight="15dp"
	            android:minHeight="50dp" >
	            
	            <TextView
	                android:id="@+id/title1"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="USERNAME"
	                android:textColor="#101010"
	                android:textSize="13sp"
	                android:layout_centerVertical="true" />
	            
	            <ImageView
	                android:id="@+id/arrow_namegr"
	                android:layout_width="33dp"
	                android:layout_height="45dp"
	                android:src="@drawable/arrow_right"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:padding="10dp"
	                android:visibility="invisible" />
	            
	            <EditText
	                android:id="@id/name"
	                android:layout_toRightOf="@id/title1"
	                android:layout_width="2000dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:gravity="center_vertical"
	                android:layout_height="wrap_content"
	                android:text="lonix_Laval"
	                android:textColor="#999999"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:background="@android:color/transparent"
	                android:focusable="false"
	                android:inputType="textMultiLine|textNoSuggestions" />
	            
	        </RelativeLayout>
	        
	        <View
	            android:id="@+id/line2"
	            android:layout_below="@id/name_group"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        <RelativeLayout
	            android:id="@+id/date_group"
	            android:layout_below="@id/line2"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:paddingLeft="15dp"
	            android:paddingRight="15dp" >
	            
	            <TextView
	                android:id="@+id/title2"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="BIRTH DATE"
	                android:textColor="#101010"
	                android:textSize="13sp"
	                android:layout_centerVertical="true" />
	            
	            <ImageView
	                android:id="@+id/arrow_dategr"
	                android:layout_width="33dp"
	                android:layout_height="45dp"
	                android:src="@drawable/arrow_right"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:padding="10dp" />
	                
	            <EditText
	                android:id="@+id/birthday"
	                android:layout_toRightOf="@id/title2"
	                android:layout_width="160dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:gravity="center_vertical"
	                android:layout_height="wrap_content"
	                android:textColor="#999999"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:background="@android:color/transparent"
	                android:focusable="false"
	                android:inputType="text" />
	            
	        </RelativeLayout>
	        
	        <View
	            android:id="@+id/line3"
	            android:layout_below="@id/date_group"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        <RelativeLayout
	            android:id="@+id/occupation_group"
	            android:layout_below="@id/line3"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:paddingLeft="15dp"
	            android:paddingRight="15dp" >
	            
	            <TextView
	                android:id="@+id/title3"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="OCCUPATION"
	                android:textColor="#101010"
	                android:textSize="13sp"
	                android:layout_centerVertical="true" />
	            
	            <ImageView
	                android:id="@+id/arrow_occgr"
	                android:layout_width="33dp"
	                android:layout_height="45dp"
	                android:src="@drawable/arrow_right"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:padding="10dp" /> />
	            
	            <EditText
	                android:id="@+id/religion"
	                android:layout_toRightOf="@id/title3"
	                android:layout_width="190dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:gravity="center_vertical"
	                android:layout_height="wrap_content"
	                android:textColor="#999999"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:background="@android:color/transparent"
	                android:focusable="false"
	                android:inputType="textNoSuggestions" />
	            	
	        </RelativeLayout>
	        
	        <View
	            android:id="@+id/line4"
	            android:layout_below="@id/occupation_group"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        <RelativeLayout
	            android:id="@+id/height_group"
	            android:layout_below="@id/line4"
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            android:paddingLeft="15dp"
	            android:paddingRight="15dp" >
	            
	            <TextView
	                android:id="@+id/title4"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="HEIGHT (M)"
	                android:textColor="#101010"
	                android:textSize="13sp"
	                android:layout_centerVertical="true" />
	            
	            <ImageView
	                android:id="@+id/arrow_heightgr"
	                android:layout_width="33dp"
	                android:layout_height="45dp"
	                android:src="@drawable/arrow_right"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:padding="10dp" /> />
	            
	            <EditText
	                android:id="@+id/body"
	                android:layout_toRightOf="@id/title4"
	                android:layout_width="190dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:gravity="center_vertical"
	                android:layout_height="wrap_content"
	                android:text="1,75"
	                android:textColor="#999999"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:background="@android:color/transparent"
	                android:focusable="false"
	                android:inputType="textNoSuggestions" />
	            
	        </RelativeLayout>
	        
	        <View
	            android:id="@+id/line5"
	            android:layout_below="@id/height_group"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        <RelativeLayout
	            android:id="@+id/city_group"
	            android:layout_below="@id/line5"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="15dp"
	            android:paddingRight="15dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:minHeight="50dp" >
	            
	            <TextView
	                android:id="@+id/title5"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="CITY"
	                android:textColor="#101010"
	                android:textSize="13sp"
	                android:layout_centerVertical="true" />
	            
	            <ImageView
	                android:id="@+id/arrow_citygr"
	                android:layout_width="33dp"
	                android:layout_height="45dp"
	                android:src="@drawable/arrow_right"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:padding="10dp" /> />
	            
	            <EditText
	                android:id="@+id/city"
	                android:layout_toRightOf="@id/title5"
	                android:layout_width="190dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:gravity="center_vertical"
	                android:layout_height="wrap_content"
	                android:text="LEBANON"
	                android:textColor="#999999"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:background="@android:color/transparent"
	                android:focusable="false"
	                android:inputType="textMultiLine|textNoSuggestions"
	                android:textCursorDrawable="@drawable/cursor_drawable" />
	            
	        </RelativeLayout>
	        
	        <View
	            android:id="@+id/line6"
	            android:layout_below="@id/city_group"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        <RelativeLayout
	            android:id="@+id/language_group"
	            android:layout_below="@id/line6"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="15dp"
	            android:paddingRight="15dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:minHeight="50dp" >
	            
	            <TextView
	                android:id="@+id/title6"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:text="LANGUAGES"
	                android:textColor="#101010"
	                android:textSize="13sp"
	                android:layout_centerVertical="true" />
	            
	            <ImageView
	                android:id="@+id/arrow_languagegr"
	                android:layout_width="33dp"
	                android:layout_height="45dp"
	                android:src="@drawable/arrow_right"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:padding="10dp" /> />
	            
	            <EditText
	                android:id="@+id/language"
	                android:layout_toRightOf="@id/title6"
	                android:layout_width="190dp"
	                android:paddingLeft="5dp"
	                android:paddingRight="5dp"
	                android:gravity="center_vertical"
	                android:layout_height="wrap_content"
	                android:textColor="#999999"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:background="@android:color/transparent"
	                android:focusable="false"
	                android:inputType="textMultiLine|textNoSuggestions"
	                android:textCursorDrawable="@drawable/cursor_drawable" />
	            
	        </RelativeLayout>
	        
	        <View
	            android:id="@+id/line7"
	            android:layout_below="@id/language_group"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:background="#bcbcbc" />
	        
	        <Button
	            android:id="@+id/done"
	            android:layout_below="@id/line7"
	            android:layout_width="190dp"
	            android:layout_height="40dp"
	            android:text="DONE"
	            android:textColor="#ffffff"
	            android:textSize="28sp"
	            android:gravity="center"
	            android:background="@drawable/my_btn_blue"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="20dp" />
            
        </RelativeLayout>
        
    </ScrollView>

</RelativeLayout>

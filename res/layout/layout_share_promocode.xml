<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
   	android:background="#F2FFFFFF"
   	android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/close"
        android:contentDescription="@string/image_desc"
        android:layout_gravity="right" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="When a friend uses your promo code you both receive __ â‚¬!"
        android:textSize="14sp"
        android:textColor="#2e2e2e"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="dra4me"
        android:textSize="20sp"
        android:textColor="#40adcc"
        android:layout_marginTop="10dp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/gg_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gg_share_pc"
            android:contentDescription="@string/image_desc"
            android:layout_marginLeft="20dp" />
        
        <ImageView
            android:id="@+id/gm_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gmail_share_pc"
            android:contentDescription="@string/image_desc"
            android:layout_marginLeft="40dp" />
        
        <ImageView
            android:id="@+id/fb_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fb_share_pc"
            android:contentDescription="@string/image_desc"
            android:layout_marginLeft="40dp" />
        
    </LinearLayout>

</LinearLayout>

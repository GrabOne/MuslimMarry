	             android:contentDescription="@string/image_desc" />
	         <ImageView
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:src="@drawable/edit_photo_icon"
	             android:contentDescription="@string/image_desc"
	             android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
    
    <!-- photo 4 -->
    <RelativeLayout
        android:id="@+id/photo4_group"
        android:layout_below="@id/main_photo_group"
        android:layout_toLeftOf="@id/photo3_group"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginRight="10dp" >
        
        <RelativeLayout
	         android:layout_width="84dp"
	         android:layout_height="84dp"
	         android:background="#52bbdb"
	         android:layout_centerInParent="true" >
         
	         <RelativeLayout
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:background="#acacac"
	             android:layout_centerInParent="true" >
	             <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:src="@drawable/add_photo_icon"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerInParent="true" />
	             <ImageView
	                 android:id="@+id/photo4"
	                 android:layout_width="match_parent"

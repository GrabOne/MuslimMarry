<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
    <RelativeLayout
        android:id="@+id/top_nav"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#52bbdb" >
        
        <ImageView
	        android:id="@+id/back"
	        android:layout_width="45dp"
	        android:layout_height="40dp"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:paddingBottom="5dp"
	        android:paddingTop="5dp"
	        android:src="@drawable/back"
	        android:contentDescription="@string/image_desc"
	        android:layout_centerVertical="true" />
        
        <TextView
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="34sp" />
        
        <ImageView
            android:id="@+id/option"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/option_icon"
            android:contentDescription="@string/image_desc"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
        
        <ImageView
            android:id="@+id/share"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/share"
            android:contentDescription="@string/image_desc"
            android:padding="10dp"
            android:visibility="gone" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_below="@id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >
        <!-- main photo -->
	    <RelativeLayout
	        android:id="@+id/main_photo_group"
	        android:layout_width="224dp"
	        android:layout_height="224dp" >
	        
	        <RelativeLayout
		         android:layout_width="204dp"
		         android:layout_height="204dp"
		         android:background="#52bbdb"
		         android:layout_centerInParent="true" >
		         
		         <RelativeLayout
		             android:layout_width="200dp"
		             android:layout_height="200dp"
		             android:layout_centerInParent="true"
		             android:background="#acacac" >
		             <ImageView
		                 android:layout_width="55dp"
		                 android:layout_height="55dp"
		                 android:src="@drawable/add_photo_icon"
		                 android:contentDescription="@string/image_desc"
		                 android:layout_centerInParent="true" />
		             <ImageView
		                 android:id="@+id/main_photo"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:contentDescription="@string/image_desc" />
		         </RelativeLayout>
	    	</RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/fc_btn_main_photo"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone" >
	            <ImageView
	                 android:id="@+id/delete_icon_main_photo"
		             android:layout_width="40dp"
		             android:layout_height="40dp"
		             android:src="@drawable/delete_photo_icon"
		             android:contentDescription="@string/image_desc" />
		         <ImageView
		             android:layout_width="40dp"
		             android:layout_height="40dp"
		             android:src="@drawable/edit_photo_icon"
		             android:contentDescription="@string/image_desc"
		             android:layout_alignParentRight="true" />
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <!-- photo 1 -->
	    <RelativeLayout
	        android:id="@+id/photo1_group"
	        android:layout_alignBaseline="@id/main_photo_group"
	        android:layout_width="104dp"
	        android:layout_height="104dp"
	        android:layout_alignParentRight="true" >
	        
	        <RelativeLayout
		         android:layout_width="84dp"
		         android:layout_height="84dp"
		         android:background="#52bbdb"
		         android:layout_centerInParent="true" >
		         
		         <RelativeLayout
		             android:layout_width="80dp"
		             android:layout_height="80dp"
		             android:background="#acacac"
		             android:layout_centerInParent="true" >
		             <ImageView
		                android:layout_width="30dp"
		                android:layout_height="30dp"
		                android:src="@drawable/add_photo_icon"
		                android:contentDescription="@string/image_desc"
		                android:layout_centerInParent="true" />
		             <ImageView
		                 android:id="@+id/photo1"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:contentDescription="@string/image_desc" />
		         </RelativeLayout>
	    	</RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/fc_btn_photo1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone" >
	            <ImageView
		             android:id="@+id/delete_icon_photo1"
			         android:layout_width="30dp"
			         android:layout_height="30dp"
			         android:src="@drawable/delete_photo_icon"
			         android:contentDescription="@string/image_desc" />
		         <ImageView
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/edit_photo_icon"
		             android:contentDescription="@string/image_desc"
		             android:layout_alignParentRight="true" />
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <!-- photo 2 -->
	    <RelativeLayout
	        android:id="@+id/photo2_group"
	        android:layout_alignBaseline="@id/main_photo_group"
	        android:layout_below="@id/photo1_group"
	        android:layout_width="104dp"
	        android:layout_height="104dp"
	        android:layout_alignParentRight="true" >
	        
	        <RelativeLayout
		         android:layout_width="84dp"
		         android:layout_height="84dp"
		         android:background="#52bbdb"
		         android:layout_centerInParent="true" >
		         
		         <RelativeLayout
		             android:layout_width="80dp"
		             android:layout_height="80dp"
		             android:background="#acacac"
		             android:layout_centerInParent="true" >
		             <ImageView
		                android:layout_width="30dp"
		                android:layout_height="30dp"
		                android:src="@drawable/add_photo_icon"
		                android:contentDescription="@string/image_desc"
		                android:layout_centerInParent="true" />
		             <ImageView
		                 android:id="@+id/photo2"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:contentDescription="@string/image_desc" />
		         </RelativeLayout>
	    	</RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/fc_btn_photo2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone" >
	            <ImageView
	                 android:id="@+id/delete_icon_photo2"
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/delete_photo_icon"
		             android:contentDescription="@string/image_desc" />
		         <ImageView
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/edit_photo_icon"
		             android:contentDescription="@string/image_desc"
		             android:layout_alignParentRight="true" />
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <!-- photo 3 -->
	    <RelativeLayout
	        android:id="@+id/photo3_group"
	        android:layout_below="@id/main_photo_group"
	        android:layout_width="104dp"
	        android:layout_height="104dp"
	        android:layout_alignParentRight="true" >
	        
	        <RelativeLayout
		         android:layout_width="84dp"
		         android:layout_height="84dp"
		         android:background="#52bbdb"
		         android:layout_centerInParent="true" >
	         
		         <RelativeLayout
		             android:layout_width="80dp"
		             android:layout_height="80dp"
		             android:background="#acacac"
		             android:layout_centerInParent="true" >
		             <ImageView
		                android:layout_width="30dp"
		                android:layout_height="30dp"
		                android:src="@drawable/add_photo_icon"
		                android:contentDescription="@string/image_desc"
		                android:layout_centerInParent="true" />
		             <ImageView
		                 android:id="@+id/photo3"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:contentDescription="@string/image_desc" />
		         </RelativeLayout>
	    	</RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/fc_btn_photo3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone" >
	            <ImageView
	                 android:id="@+id/delete_icon_photo3"
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/delete_photo_icon"
		             android:contentDescription="@string/image_desc" />
		         <ImageView
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/edit_photo_icon"
		             android:contentDescription="@string/image_desc"
		             android:layout_alignParentRight="true" />
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <!-- photo 4 -->
	    <RelativeLayout
	        android:id="@+id/photo4_group"
	        android:layout_below="@id/main_photo_group"
	        android:layout_toLeftOf="@id/photo3_group"
	        android:layout_width="104dp"
	        android:layout_height="104dp"
	        android:layout_marginRight="10dp" >
	        
	        <RelativeLayout
		         android:layout_width="84dp"
		         android:layout_height="84dp"
		         android:background="#52bbdb"
		         android:layout_centerInParent="true" >
	         
		         <RelativeLayout
		             android:layout_width="80dp"
		             android:layout_height="80dp"
		             android:background="#acacac"
		             android:layout_centerInParent="true" >
		             <ImageView
		                android:layout_width="30dp"
		                android:layout_height="30dp"
		                android:src="@drawable/add_photo_icon"
		                android:contentDescription="@string/image_desc"
		                android:layout_centerInParent="true" />
		             <ImageView
		                 android:id="@+id/photo4"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:contentDescription="@string/image_desc" />
		         </RelativeLayout>
	    	</RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/fc_btn_photo4"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone" >
	            <ImageView
	                 android:id="@+id/delete_icon_photo4"
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/delete_photo_icon"
		             android:contentDescription="@string/image_desc" />
		         <ImageView
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/edit_photo_icon"
		             android:contentDescription="@string/image_desc"
		             android:layout_alignParentRight="true" />
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <!-- photo 5 -->
	    <RelativeLayout
	        android:id="@+id/photo5_group"
	        android:layout_below="@id/main_photo_group"
	        android:layout_width="104dp"
	        android:layout_height="104dp" >
	        
	        <RelativeLayout
		         android:layout_width="84dp"
		         android:layout_height="84dp"
		         android:background="#52bbdb"
		         android:layout_centerInParent="true" >
	         
		         <RelativeLayout
		             android:layout_width="80dp"
		             android:layout_height="80dp"
		             android:background="#acacac"
		             android:layout_centerInParent="true" >
		             <ImageView
		                android:layout_width="30dp"
		                android:layout_height="30dp"
		                android:src="@drawable/add_photo_icon"
		                android:contentDescription="@string/image_desc"
		                android:layout_centerInParent="true" />
		             <ImageView
		                 android:id="@+id/photo5"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:contentDescription="@string/image_desc" />
		         </RelativeLayout>
	    	</RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/fc_btn_photo5"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone" >
	            <ImageView
	                 android:id="@+id/delete_icon_photo5"
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/delete_photo_icon"
		             android:contentDescription="@string/image_desc" />
		         <ImageView
		             android:layout_width="30dp"
		             android:layout_height="30dp"
		             android:src="@drawable/edit_photo_icon"
		             android:contentDescription="@string/image_desc"
		             android:layout_alignParentRight="true" />
	        </RelativeLayout>
	    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>

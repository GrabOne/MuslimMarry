	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:src="@drawable/delete_photo_icon"
	             android:contentDescription="@string/image_desc" />
	         <ImageView
	             android:layout_width="30dp"
	             android:layout_height="30dp"
	             android:src="@drawable/edit_photo_icon"
	             android:contentDescription="@string/image_desc"
	             android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
    
    <!-- photo 3 -->
    <RelativeLayout
        android:id="@+id/photo3_group"
        android:layout_below="@id/main_photo_group"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_alignParentRight="true" >
        
        <RelativeLayout
	         android:layout_width="84dp"
	         android:layout_height="84dp"
	         android:background="#52bbdb"
	         android:layout_centerInParent="true" >
         
	         <RelativeLayout
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:background="#acacac"
	             android:layout_centerInParent="true" >
	             <ImageView
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:src="@drawable/add_photo_icon"
	                android:contentDescription="@string/image_desc"
	                android:layout_centerInParent="true" />
	             <ImageView
	                 android:id="@+id/photo3"
	                 android:layout_width="match_parent"
	                 android:layout_height="match_parent"
	                 android:contentDescription="@string/image_desc" />
	         </RelativeLayout>
    	</RelativeLayout>
        <RelativeLayout
            android:id="@+id/fc_btn_photo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
            <ImageView
                 android:id="@+id/delete_icon_photo3"
	             android:layout_width="30dp"
	             android:layout_height="30dp"

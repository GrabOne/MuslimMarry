<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#52bbdb" >
        
        <ImageView
	        android:id="@+id/back"
	        android:layout_width="45dp"
	        android:layout_height="40dp"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:paddingBottom="5dp"
	        android:paddingTop="5dp"
	        android:src="@drawable/back"
	        android:contentDescription="@string/image_desc"
	        android:layout_centerVertical="true" />
        
        <ImageView
            android:id="@+id/heart"
            android:layout_toRightOf="@id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/image_desc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />
        
        <TextView
            android:layout_toRightOf="@id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=" 4 of 6"
            android:textColor="#ffffff"
            android:layout_centerVertical="true" />
        
        <ImageView
            android:id="@+id/option"
            android:layout_width="47dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/option_icon"
            android:contentDescription="@string/image_desc"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
        
        <ImageView
            android:id="@+id/arrow"
            android:layout_toLeftOf="@id/option"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:src="@drawable/arrow"
            android:contentDescription="@string/image_desc"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
        
        <ImageView
            android:layout_toLeftOf="@id/arrow"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/rectangle_icon"
            android:contentDescription="@string/image_desc"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true" />
        
    </RelativeLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/avatar"
        android:contentDescription="@string/image_desc"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fr 27th of Dec. 2014 21:23"
        android:textSize="14sp"
        android:textColor="#343535"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
